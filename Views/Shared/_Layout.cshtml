<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CVDMBlog</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid" style="text-align: center;">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="display: inline-block; margin: 0 auto;">CVDMBlog</a>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1" style="display: flex; justify-content: center; list-style-type: none; padding-left: 0;">
                    <li class="nav-item" style="margin-right: 15px;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item" style="margin-right: 15px;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Panel" asp-action="Edit">Edit</a>
                    </li>
                    <li class="nav-item" style="margin-right: 15px;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Panel" asp-action="Index">Admin Panel</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item" style="margin-right: 15px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item" style="margin-right: 15px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Sign In</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
    }

    .container-flex {
        flex: 1;
    }

    footer {
        margin-top: auto;
        margin-bottom: 15px;
    }
</style>

<div class="container-flex">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted" style="position: fixed; bottom: 15px; width: 100%; text-align: center;">
    <div class="container">
        &copy; 2024 - CVDMBlog - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>